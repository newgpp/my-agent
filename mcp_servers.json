{
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${FS_ALLOWED_DIR_1}",
        "${FS_ALLOWED_DIR_2}"
      ]
    },
    "tavily": {
      "command": "python",
      "env": {
        "PYTHONUTF8": "1",
        "PYTHONIOENCODING": "utf-8"
      },
      "args": [
        "servers/tavily_mcp_server.py"
      ]
    }
  }
}
